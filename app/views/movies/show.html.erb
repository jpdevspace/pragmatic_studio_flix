<div class="flex flex-col pb-3 border-b-1 border-b-gray-300 mb-4">
  <h1 class="font-semibold text-4xl mb-4">
    <%= @movie.title %>
  </h1>
  <h2 class="text-gray-500">
    <%= year_of(@movie) %>  &bull; <%= @movie.rating %>
  </h2>
  
  <p class="mt-4">
    <%= @movie.description %>
  </p>

  <table class="mt-6">
    <tr>
      <th>Total Gross:</th>
      <td><%= total_gross(@movie) %></td>
    </tr>
  </table>
</div>
<%= link_to "Edit", edit_movie_path(@movie), class: "rounded-sm bg-amber-400 px-2 py-1 text-medium font-semibold text-white shadow-xs hover:bg-amber-300" %>