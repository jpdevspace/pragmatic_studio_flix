<div class="flex flex-col">
  <div>
    <h1 class="font-semibold text-4xl mb-4">
      <%= @movie.title %>
    </h1>
    <h2 class="text-gray-500">
      <%= year_of(@movie) %>  &bull; <%= @movie.rating %>
    </h2>
    
    <p class="mt-4">
      <%= @movie.description %>
    </p>

    <table class="mt-6">
      <tr>
        <th>Total Gross:</th>
        <td><%= total_gross(@movie) %></td>
      </tr>
    </table>
  </div>
</div>