<div class="flex flex-col pb-3 border-b-1 border-b-gray-300 mb-4">
  <div>
    <h2 class="font-semibold text-4xl mb-4">
      Editing <%= @movie.title %>
    </h2>

    <div class="w-lg">
      <%= form_with(model: @movie) do |form| %>
        <%= form.label :title, { class: "block w-full mt-4 text-sm/6 font-medium text-gray-900"} %>
        <div class="mt-2">
          <%= form.text_field :title, { class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" } %>
        </div>

        <%= form.label :description, { class: "block w-full mt-4 text-sm/6 font-medium text-gray-900"} %>
        <div class="mt-2">
          <%= form.text_area :description, rows: 5, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" %>
        </div>

        <%= form.label :rating, { class: "block w-full mt-4 text-sm/6 font-medium text-gray-900"} %>
        <div class="mt-2">
          <%= form.text_field :rating, { class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" } %>
        </div>

        <%= form.label :total_gross, { class: "block w-full mt-4 text-sm/6 font-medium text-gray-900"} %>
        <div class="mt-2">
          <%= form.number_field :total_gross, { class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" } %>
        </div>

        <%= form.label :released_on, { class: "block w-full mt-4 text-sm/6 font-medium text-gray-900"} %>
        <div class="mt-2 flex flex-row gap-x-2">
          <%= form.datetime_select :released_on, { ampm: true}, { class: "block rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" } %>
        </div>
        
        <%= form.submit class: "mt-6 rounded-sm bg-amber-400 px-2 py-1 text-small font-semibold text-white shadow-xs cursor-pointer" %>
      <% end %>
    </div>
  </div>
</div>

